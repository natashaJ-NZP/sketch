<!DOCTYPE html>
<head>
    <meta charset="utf-8">
</head>
<body>
    <div class="header">
        {{ page.header }}
        <h1>{%  if site_name  %} {{ site_name  }} {% end if; %}</h1>
    </div>
    
    <main>
        <div class="left">
            <!--MAIN MENU-->
            {{ page.menu }}
        </div>
        <div class="right">
        <div class="row">
            <div class="col-md-4 col-sm-4 d-none d-sm-block" id="sidebar">
             if {% page.sidebar %}
                <div class="utility-sidebar">
                    <div class="wrapper">
                        <div class="utility-search">
                            <input type="text" placeholder="Search" />
                            <i class="fas fa-ellipsis-v"></i>
                        </div>
                    </div>
                </div>
            {% end if %}
            </div>
            <div class="col-md-8 col-sm-8" id="content-area">
            <div class="wrapper">
                <ul class="utility-header">
                <li class="active"><a href="#">New Message</a></li>
                <li><a href="#">View</a></li>
                <li><a href="#">Edit</a></li>
                if {{ node.label }}
                </ul>
                <div class="content">
                    <!--Content Here-->
                    {{ page.content }}
                </div>
            </div>
            </div>
        </div>
        </div>
        </div>
    </main>
</body>